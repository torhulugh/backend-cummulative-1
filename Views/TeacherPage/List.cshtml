@model List<Cummulative1.Models.Teacher>

@{
    ViewData["Title"] = "Teacher List";
}

<h1>Teacher List</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherFName</td>
                <td>@teacher.TeacherLName</td>
                <td>@teacher.EmployeeNumber</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.Salary.ToString("C")</td>
                <td>
                    <a asp-action="Show" asp-route-id="@teacher.TeacherId" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
